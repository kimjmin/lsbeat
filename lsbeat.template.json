{
  "mappings": {
    "_default_": {
      "_all": {
        "norms": false
      },
      "dynamic_templates": [
        {
          "fields": {
            "mapping": {
              "ignore_above": 1024,
              "type": "keyword"
            },
            "match_mapping_type": "string",
            "path_match": "fields.*"
          }
        }
      ],
      "properties": {
        "@timestamp": {
          "type": "date"
        },
        "beat": {
          "properties": {
            "hostname": {
              "ignore_above": 1024,
              "type": "keyword"
            },
            "name": {
              "ignore_above": 1024,
              "type": "keyword"
            }
          }
        },
        "counter": {
          "type": "long"
        },
        "file_name": {
          "norms": false,
          "type": "text"
        },
        "file_size": {
          "type": "long"
        },
        "full_name": {
          "ignore_above": 1024,
          "type": "keyword"
        },
        "is_directory": {
          "type": "boolean"
        },
        "mod_time": {
          "type": "date"
        },
        "tags": {
          "ignore_above": 1024,
          "type": "keyword"
        }
      }
    }
  },
  "order": 0,
  "settings": {
    "index.refresh_interval": "5s"
  },
  "template": "lsbeat-*"
}